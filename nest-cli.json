{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["**/*.prisma"],
    "watchAssets": true,
    "deleteOutDir": true
  },
  "generateOptions": {
    "spec": false,
    "flat": false
  },
  "projects": {
    "modules": {
      "type": "library",
      "root": "src/modules",
      "entryFile": "index",
      "sourceRoot": "src/modules"
    }
  }
}
