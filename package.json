{
  "name": "nestjs-prisma-pro-starter",
  "version": "0.0.1",
  "description": "A professional NestJS starter template with Prisma integration, providing a robust foundation for building scalable Node.js applications",
  "author": "Franzua Plasencia <plasenca-d>",
  "repository": {
    "type": "git",
    "url": "https://github.com/plasenca-d/nestjs-prisma-pro-starter.git"
  },
  "keywords": [
    "nestjs",
    "prisma",
    "typescript",
    "nodejs",
    "starter-template",
    "rest-api",
    "docker",
    "jest",
    "testing"
  ],
  "bugs": {
    "url": "https://github.com/plasenca-d/nestjs-prisma-pro-starter/issues"
  },
  "homepage": "https://github.com/plasenca-d/nestjs-prisma-pro-starter#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "contributors": [
    {
      "name": "Franzua Plasencia",
      "email": "franzua_plasencia@outlook.com"
    }
  ],
  "private": false,
  "license": "MIT",
  "scripts": {
    "migrate:dev": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "seed:dev": "prisma db seed",
    "seed:prod": "NODE_ENV=production prisma db seed",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "test:unit": "jest --testPathPattern=src",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer dist/main.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "new:module": "bash ./scripts/generate-module.sh",
    "prepare": "husky",
    "cm": "cz",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.6",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
